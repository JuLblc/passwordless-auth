{{#if user}}
 <h2>You are now logged in 👍</h2>
 <h3>{{user.email}}</h3>
 <form action="/logout" method="POST"> 
    <button class="button is-danger is-outlined" type="submit" id="logout">Log out</button>
 </form>
 {{else}}
<form action="/login" method="GET"> 
    <button class="button button is-primary" type="submit" id="login">Go to Login page</button>
 </form>
{{/if}}